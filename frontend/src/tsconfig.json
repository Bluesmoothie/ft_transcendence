{
	"compilerOptions":
	{
		"module": "es2022",
		"target": "es2017",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"strict": true, //TODO try to compile strict
		"baseUrl": "./ts",
		"paths": {
			"@core/*": ["core/*"],
			"@modules/*": ["modules/*"]
		}
	},
	"include": ["ts/*.ts", "ts/pages/GameState.ts", "ts/pages/Tournament.ts"],
	"exclude": ["node_modules"]
}
